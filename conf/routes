# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the computer pmtlist
GET         /                            controllers.Application.index()

GET         /main                        controllers.Application.main()

GET         /usermain                    controllers.UserMgr.pmtmain()
GET         /userpmts                    controllers.UserMgr.pmtlist(p:Int ?= 0, s ?= "cc_name", o ?= "asc", f ?= "")
GET         /userpmts/new                controllers.UserMgr.create()
POST        /userpmts                    controllers.UserMgr.save()
POST        /userpmts/:id/delete         controllers.UserMgr.delete(id:Long)
POST        /userpmts/:id                controllers.UserMgr.update(id:Long)
GET         /userpmts/:id                controllers.UserMgr.edit(id:Long)

# Computers pmtlist (look at the default values for pagination parameters)
GET         /computers                   controllers.Application.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Add computer
GET         /computers/new               controllers.Application.create()
POST        /computers                   controllers.Application.save()

# Edit existing computer
GET         /computers/:id               controllers.Application.edit(id:Long)
POST        /computers/:id               controllers.Application.update(id:Long)

# Delete a computer
POST        /computers/:id/delete        controllers.Application.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)

#User
GET         /signin                      controllers.SignIn.blank()
POST        /signin                      controllers.SignIn.signin()
GET         /signup                      controllers.SignUp.blank()
POST        /signup                      controllers.SignUp.signup()
